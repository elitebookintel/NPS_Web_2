<script src="~/js/Pages/ProfileInfo/ProfileInfo.js" asp-append-version="true"></script>

<div class="col-xl-12">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-xl-2 col-lg-3 col-md-3 col-sm-4 col-12">
                    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist"
                         aria-orientation="vertical">
                        <a class="nav-link mb-2 active" id="v-pills-editProfile-tab" data-bs-toggle="pill"
                           href="#v-pills-editProfile" role="tab" aria-controls="v-pills-editProfile"
                           aria-selected="true">@Localization.EditProfile</a>
                        <a class="nav-link mb-2" id="v-pills-password-tab" data-bs-toggle="pill"
                           href="#v-pills-password" role="tab" aria-controls="v-pills-password"
                           aria-selected="false">@Localization.ChangePassword</a>
                    </div>
                </div>
                <div class="col-xl-10 col-lg-9 col-md-9 col-sm-8 col-12">
                    <div class="tab-content text-muted" id="v-pills-tabContent">
                        <div class="tab-pane fade show active" id="v-pills-editProfile" role="tabpanel" aria-labelledby="v-pills-editProfile-tab">
                            <div id="editProfile"></div>
                        </div>

                        <div class="tab-pane fade" id="v-pills-password" role="tabpanel" aria-labelledby="v-pills-password-tab">
                            <div id="changePassword"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>