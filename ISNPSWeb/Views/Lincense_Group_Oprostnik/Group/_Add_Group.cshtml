                    // .DataSource(new JS("ISNPS.load_dataSource('/GroupQuestionnarei_API/Oprostnik_Id_List','DeleteQuestionnaries','TagBox')"))
                    .DataSource(d => d.Mvc().Controller("GroupQuestionnarei_API").LoadAction("Oprostnik_Id_List").Key("Oid"))
